# Enhanced Universal Logging Platform - Environment Configuration Template
# Copy this file to .env and update the values

# ==========================================
# SECURITY CONFIGURATION (REQUIRED)
# ==========================================

# Admin Authentication Password (Required)
# Must be at least 12 characters long
AUTH_PASSWORD=YourSecurePassword123!

# JWT Secret for token signing (Required for security)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Session Secret (Optional - will be auto-generated if not set)
SESSION_SECRET=your-session-secret-here

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# Server Port
PORT=10180

# Environment Mode
NODE_ENV=production

# Timezone
TIMEZONE=America/Edmonton

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ==========================================
# HTTPS/SSL CONFIGURATION
# ==========================================

# Enable HTTPS (true/false)
USE_HTTPS=false

# SSL Certificate Paths (if HTTPS enabled)
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt

# ==========================================
# SECURITY HEADERS & CORS
# ==========================================

# CORS Allowed Origins (comma-separated)
CORS_ORIGIN=http://localhost:10180,https://localhost:10180

# ==========================================
# INTEGRATIONS
# ==========================================

# UniFi Controller Integration
UNIFI_ENABLED=false
UNIFI_HOST=https://unifi.local:8443
UNIFI_USER=admin
UNIFI_PASS=your-unifi-password
UNIFI_POLL_INTERVAL=300

# Home Assistant Integration
HA_ENABLED=false
HA_HOST=http://homeassistant.local:8123
HA_TOKEN=your-home-assistant-token
HA_WEBSOCKET=true

# MQTT Integration
MQTT_ENABLED=false
MQTT_BROKER=mqtt://localhost:1883
MQTT_USERNAME=your-mqtt-username
MQTT_PASSWORD=your-mqtt-password

# ==========================================
# NOTIFICATIONS
# ==========================================

# Email Notifications
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Pushover Notifications
PUSHOVER_ENABLED=false
PUSHOVER_TOKEN=your-pushover-token
PUSHOVER_USER=your-pushover-user

# Twilio SMS Notifications
TWILIO_ENABLED=false
TWILIO_SID=your-twilio-sid
TWILIO_TOKEN=your-twilio-token
TWILIO_FROM=your-twilio-phone-number

# ==========================================
# ADVANCED FEATURES
# ==========================================

# WebSocket Server
WS_ENABLED=true
WS_PORT=8081

# Machine Learning Features
ML_ENABLED=false

# Distributed Tracing
TRACING_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ==========================================
# DATABASE & STORAGE
# ==========================================

# Database Path (SQLite)
DB_PATH=./data/databases/logs.db

# Data Retention (days)
DATA_RETENTION_DAYS=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# ==========================================
# PERFORMANCE TUNING
# ==========================================

# bcrypt Salt Rounds (10-15 recommended)
BCRYPT_SALT_ROUNDS=12

# Maximum Request Size
MAX_REQUEST_SIZE=10mb

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# MONITORING & DEBUGGING
# ==========================================

# Enable Performance Monitoring
PERFORMANCE_MONITORING=true

# Enable Audit Logging
AUDIT_LOGGING=true

# Debug Mode
DEBUG=false

# ==========================================
# DOCKER SPECIFIC (for containerized deployment)
# ==========================================

# Container healthcheck interval
HEALTHCHECK_INTERVAL=30

# Container timezone
TZ=America/Edmonton

# ==========================================
# SECURITY NOTES
# ==========================================

# 1. Keep this file secure - set permissions to 600 (owner read/write only)
# 2. Never commit .env files to version control
# 3. Use strong, unique passwords for all services
# 4. Regularly rotate secrets and tokens
# 5. Enable HTTPS in production environments
# 6. Review and audit access logs regularly
# 7. Keep all dependencies updated
{
  "name": "Enhanced Logging Server - Docker Dev",
  "dockerFile": "Dockerfile",
  "context": ".",
  
  "workspaceFolder": "/app",
  "shutdownAction": "stopContainer",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "ms-vscode.PowerShell",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  
  "forwardPorts": [3000, 8081, 8082],
  "portsAttributes": {
    "3000": {
      "label": "Logging Server",
      "onAutoForward": "openBrowser"
    }
  },
  
  "postCreateCommand": "npm install",
  "postStartCommand": "echo 'Docker development environment ready! üê≥'",
  
  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/app/data,type=bind,consistency=cached"
  ],
  
  "containerEnv": {
    "AUTH_PASSWORD": "ChangeMe123!",
    "PORT": "3000",
    "JWT_SECRET": "e8f9d17c828074916ce801f9700d498f36c3e8e9a81dd3e0d34f2999a5a44cafffb761c045a0afeac7056277c63b39ac4ff17e4a65704ca398f1dcd549be19bc",
    "NODE_ENV": "development"
  }
}
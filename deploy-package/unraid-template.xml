<?xml version="1.0"?>
<Container version="2">
  <Name>Rejavarti-Logging-Server</Name>
  <Repository>rejavarti/rejavartis_logging_server:latest</Repository>
  <Registry>https://hub.docker.com/</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/rejavarti/logging-server</Support>
  <Project>https://github.com/rejavarti/logging-server</Project>
  <Overview>
    Enterprise Logging Platform - Universal Infrastructure Monitoring with Multi-User Authentication and RBAC.
    
    Features:
    - Multi-user authentication with role-based access control (Admin/User)
    - Integration management (MQTT, WebSocket, UniFi, Home Assistant)
    - Webhook system for event notifications
    - Real-time monitoring and analytics
    - Automatic daily backups (keeps last 10)
    - Activity logging and audit trails
    - Ocean Blue themed responsive UI
    - PM2 process management for auto-restart
    
    Perfect for DSC security systems, UniFi networks, Home Assistant, Node-RED, and IoT device logging.
  </Overview>
  <Category>Tools: Network:Management Status:Stable</Category>
  <WebUI>http://[IP]:[PORT:10180]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/rejavarti/logging-server/main/unraid-template.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/rejavarti/logging-server/main/icon.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="WebUI Port" Target="10180" Default="10180" Mode="tcp" Description="Web interface and API port" Type="Port" Display="always" Required="true" Mask="false">10180</Config>
  <Config Name="Data Directory" Target="/app/data" Default="/mnt/user/appdata/logging-server/data" Mode="rw" Description="Persistent data storage (databases, backups, sessions)" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/logging-server/data</Config>
  <Config Name="Logs Directory" Target="/app/logs" Default="/mnt/user/appdata/logging-server/logs" Mode="rw" Description="Categorized log files storage" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/logging-server/logs</Config>
  <Config Name="Node Environment" Target="NODE_ENV" Default="production" Mode="" Description="Node.js environment (production/development)" Type="Variable" Display="always" Required="true" Mask="false">production</Config>
  <Config Name="Application Port" Target="PORT" Default="10180" Mode="" Description="Internal application port (should match container port)" Type="Variable" Display="always" Required="true" Mask="false">10180</Config>
  <Config Name="Timezone" Target="TZ" Default="America/Denver" Mode="" Description="Container timezone for log timestamps" Type="Variable" Display="always" Required="true" Mask="false">America/Denver</Config>
  <Config Name="Auth Username" Target="AUTH_USERNAME" Default="dsc_logger" Mode="" Description="Default authentication username (change after first login)" Type="Variable" Display="always" Required="true" Mask="false">dsc_logger</Config>
  <Config Name="Auth Password" Target="AUTH_PASSWORD" Default="" Mode="" Description="Default authentication password (CHANGE THIS!)" Type="Variable" Display="always" Required="true" Mask="true">SecureLog2025!</Config>
  <Config Name="PUID" Target="PUID" Default="1001" Mode="" Description="User ID for file permissions" Type="Variable" Display="advanced" Required="false" Mask="false">1001</Config>
  <Config Name="PGID" Target="PGID" Default="1001" Mode="" Description="Group ID for file permissions" Type="Variable" Display="advanced" Required="false" Mask="false">1001</Config>
</Container>

# ============================================
# LOGGING SERVER ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# For Docker/PM2: Pass these as -e flags or ecosystem.config.js env section

# ============================================
# CRITICAL SECURITY SETTINGS (REQUIRED)
# ============================================

# JWT Secret for token signing (REQUIRED in production)
# Generate a secure secret with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secure-jwt-secret-here

# Default admin password (REQUIRED for first login)
# Change this immediately after first login!
AUTH_PASSWORD=ChangeMe123!

# ============================================
# SERVER CONFIGURATION
# ============================================

# Node environment (development, production, test)
NODE_ENV=production

# Server port (default: 10180)
PORT=10180

# Allow development JWT secret fallback (NEVER use in production!)
# ALLOW_DEV_SECRET=true

# ============================================
# RATE LIMITING
# ============================================

# Disable rate limiting for testing (default: false)
# DISABLE_RATE_LIMITING=true

# ============================================
# DISK MONITORING
# ============================================

# Disk quota in MB for monitoring (optional)
# Without this, shows percentage of logging directory vs available space
# With this, shows percentage against fixed quota limit
# DISK_QUOTA_MB=10240

# ============================================
# INTEGRATION SETTINGS (OPTIONAL)
# ============================================

# UniFi Controller Integration
# UNIFI_ENABLED=false
# UNIFI_HOST=https://unifi.local:8443
# UNIFI_USER=admin
# UNIFI_PASS=password
# UNIFI_POLL_INTERVAL=300

# Home Assistant Integration
# HA_ENABLED=false
# HA_HOST=http://homeassistant.local:8123
# HA_TOKEN=your-long-lived-access-token
# HA_WEBSOCKET=true

# WebSocket Real-Time Streaming
# WS_ENABLED=true
# WS_PORT=8081

# ============================================
# ALERTING & NOTIFICATIONS (OPTIONAL)
# ============================================

# Slack Integration
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_CHANNEL=#alerts

# Discord Integration
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Email Notifications
# EMAIL_ENABLED=false
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM=logging-server@example.com

# Twilio SMS Notifications
# TWILIO_ENABLED=false
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_FROM_NUMBER=+1234567890
# TWILIO_TO_NUMBER=+1234567890

# PagerDuty Integration
# PAGERDUTY_ENABLED=false
# PAGERDUTY_INTEGRATION_KEY=your-integration-key

# ============================================
# DISTRIBUTED TRACING (OPTIONAL)
# ============================================

# OpenTelemetry / Jaeger Tracing
# JAEGER_ENABLED=false
# JAEGER_ENDPOINT=http://localhost:14268/api/traces
# JAEGER_SERVICE_NAME=logging-server

# ============================================
# DATA RETENTION (OPTIONAL)
# ============================================

# Log retention in days (default: 30)
# LOG_RETENTION_DAYS=30

# Maximum database size in MB (default: unlimited)
# MAX_DB_SIZE_MB=5120

# Enable automatic archiving (default: false)
# AUTO_ARCHIVE_ENABLED=false
# ARCHIVE_PATH=/path/to/archive

# ============================================
# PERFORMANCE TUNING (OPTIONAL)
# ============================================

# Enable query caching (default: true)
# QUERY_CACHE_ENABLED=true

# Query cache TTL in seconds (default: 300)
# QUERY_CACHE_TTL=300

# Max concurrent requests (default: 100)
# MAX_CONCURRENT_REQUESTS=100

# ============================================
# DEVELOPMENT/DEBUGGING (OPTIONAL)
# ============================================

# Enable debug logging (default: false)
# DEBUG=true
# DEBUG_LAYOUT_LOG=true

# Enable verbose SQL logging (default: false)
# SQL_DEBUG=true

# ============================================
# DOCKER/PM2 USAGE EXAMPLES
# ============================================

# Docker run command:
# docker run -d --name logging-server \
#   -p 10180:10180 \
#   -v ./data:/app/data \
#   -e NODE_ENV=production \
#   -e JWT_SECRET="your-64-char-secret-here" \
#   -e AUTH_PASSWORD="YourSecurePassword123!" \
#   --restart unless-stopped \
#   rejavarti/logging-server:latest

